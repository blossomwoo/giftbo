<h1>Listing surveys</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Zip</th>
    <th>Dob</th>
    <th>Flowers</th>
    <th>Anniversary date</th>
    <th>Dislikes</th>
    <th>Budget</th>
    <th>Ship address</th>
    <th>Ship zip</th>
    <th>Ship city</th>
    <th>Phone num</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><%= survey.name %></td>
    <td><%= survey.zip %></td>
    <td><%= survey.dob %></td>
    <td><%= survey.flowers %></td>
    <td><%= survey.anniversary_date %></td>
    <td><%= survey.dislikes %></td>
    <td><%= survey.budget %></td>
    <td><%= survey.ship_address %></td>
    <td><%= survey.ship_zip %></td>
    <td><%= survey.ship_city %></td>
    <td><%= survey.phone_num %></td>
    <td><%= survey.user %></td>
    <td><%= link_to 'Show', survey %></td>
    <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
    <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

