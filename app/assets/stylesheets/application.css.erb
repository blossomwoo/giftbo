.container{
  width: 1000px;
  min-height: 1000px;
  margin: 0 auto;
}
#Giftbo_logo{
  margin: 30px 0;
}
.btn-gold{
  background: #c38c16;
  color: #FFF;
  text-shadow: none;
}

.btn-gold:hover{
  background: #ab7c16;
  color: #fff;
}

.navbar .brand.brand-img{
  padding: 5px 20px;
}

.signinbox{
  font-weight: bold;
  color: #FFF;
  background: #000;
  text-align: center;
  font-size: 1.4em;
  margin-top: 30px;
  height: 100px;
  padding: 50px 10px;
}

.giftlistbox{
  font-weight: bold;
  color: #FFF;
  background: #000;
  text-align: center;
  font-size: 1.4em;
  margin-top: 30px;
  height: 50px;
  padding: 0px 0px;
  width: 1000px;
  margin-bottom: 40px;
}

.giftlist{
  margin: 0px 0px;
}

.giftlist img{
}

.container_fancy{
  background: url(<%= image_path "left_bg_bar.png" %>) repeat-y;
}

.container_fancy .content{
  width: 600px;
  margin: 0 auto;
}
